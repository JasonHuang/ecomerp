<h1>Login</h1>

<%= form_with(scope: :session, url: login_path, method: :post) do |form| %>
  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <p>
    <%= form.submit "Login" %>
  </p>
<% end %>

<%= link_to 'Register', signup_path, class: 'btn btn-primary' %>
